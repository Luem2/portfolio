{
    "compilerOptions": {
        "target": "ESNext",
        "lib": [
            "DOM",
            "DOM.Iterable",
            "ESNext",
            "ESNext.Intl",
            "ES2017.Intl",
            "ES2018.Intl"
        ],
        "allowJs": true,
        "skipLibCheck": true,
        "strict": false,
        "forceConsistentCasingInFileNames": true,
        "noEmit": true,
        "incremental": true,
        "esModuleInterop": true,
        "module": "esnext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "preserve"
    },
    "include": [
        "next-env.d.ts",
        "next.config.js",
        ":**/*.ts",
        "**/*.tsx",
        "**/*.d.ts",
        "types/types.ts"
    ],
    "exclude": ["node_modules"]
}
